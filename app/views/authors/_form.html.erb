<div class="container-fluid">
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row">
        <div class="col-lg-7 mx-auto">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Add Author Details</h1>
            </div>

<%= form_with(model: @author, local: true) do |form| %>


   <div class="form-group">
                <%= form.text_field :first_name , autofocus: true, class: 'form-control form-control-user', placeholder: 'Author first name' %>
   </div>

   <div class="form-group">
                <%= form.text_field :last_name , autofocus: true, class: 'form-control form-control-user', placeholder: 'Author last name' %>
   </div>

    <div class="form-group">
                <%= form.date_field :date_of_birth , autofocus: true, class: 'form-control form-control-user', placeholder: 'Dob'%>
   </div>

   <%= form.submit "Save", class: 'btn btn-primary btn-user btn-block'%>

 <% end %>
</div>
</div>
</div>
</div>
</div>
</div>